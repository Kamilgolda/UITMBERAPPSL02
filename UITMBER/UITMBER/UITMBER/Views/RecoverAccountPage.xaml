<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UITMBER.Views.RecoverAccountPage"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout Padding="20,40,20,20" VerticalOptions="Center">
            <Label Text="Odzyskaj konto"
                HorizontalOptions="CenterAndExpand" VerticalOptions="Start" FontSize="Title" />
            <Label x:Name="EmailLabel" Text="Email" FontSize="Subtitle"></Label>
            <Entry x:Name="EmailEntry" Placeholder="Email"></Entry>
            <Button x:Name="OdzyskajButton" Text="Odzyskaj" VerticalOptions="End" Clicked="OdzyskajButton_Clicked"></Button>
            <Label x:Name="ResponseLabel" Text="Został wysłany mail z instrukcją zmiany hasła" FontSize="Subtitle" IsVisible="false"></Label>
            <Button x:Name="ResponseLogin" Text="Zaloguj" VerticalOptions="End" Clicked="ResponseLogin_Clicked" IsVisible="false"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>